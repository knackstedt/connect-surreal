{
    "compilerOptions": {
        "rootDir": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": false,
        "importHelpers": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "src/test/**/*.ts",
        "dist/**/*.ts",
        "vite.config.ts"
    ]
}